<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>

    </style>

    <style name="main_button_style">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:shadowColor">@color/colorBlack</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="detail_textView_style">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="search_radioButton_style">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/avenir_bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="search_textView_style">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/avenir_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="search_editText_style">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHighlight">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/avenir_medium</item>
        <item name="android:inputType">number</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>